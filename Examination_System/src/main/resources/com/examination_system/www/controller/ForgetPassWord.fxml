<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.examination_system.www.controller.ForgetPassWordController">
   <children>
      <Label layoutX="237.0" layoutY="25.0" prefHeight="43.0" prefWidth="121.0" text="忘记密码">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="148.0" layoutY="100.0" prefHeight="35.0" prefWidth="87.0" text="姓名:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="name" layoutX="235.0" layoutY="103.0" />
      <Label layoutX="148.0" layoutY="165.0" prefHeight="35.0" prefWidth="87.0" text="密码:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <PasswordField fx:id="password" layoutX="235.0" layoutY="168.0" />
      <Button fx:id="Sure" layoutX="148.0" layoutY="331.0" mnemonicParsing="false" onAction="#SureOnAction" prefHeight="43.0" prefWidth="87.0" text="确定">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="Exit" layoutX="358.0" layoutY="331.0" mnemonicParsing="false" onAction="#ExitOnAction" prefHeight="43.0" prefWidth="87.0" text="取消">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Label fx:id="success" alignment="CENTER" contentDisplay="CENTER" layoutX="203.0" layoutY="258.0" prefHeight="51.0" prefWidth="173.0" text="修改成功!" textFill="#ee0202" visible="false">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="fail" alignment="CENTER" contentDisplay="CENTER" layoutX="126.0" layoutY="258.0" prefHeight="51.0" prefWidth="327.0" text="登录失败!该用户不存在!" textFill="#ee0202" visible="false">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <RadioButton fx:id="student" layoutX="150.0" layoutY="214.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="95.0" text="学生">
         <font>
            <Font size="20.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="StatusGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="teacher" layoutX="297.0" layoutY="214.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="95.0" text="老师" toggleGroup="$StatusGroup">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
