<AnchorPane prefHeight="550.0" prefWidth="498.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.examination_system.www.controller.RegisterController">
   <children>
      <Button fx:id="Sure" layoutX="91.0" layoutY="429.0" mnemonicParsing="false" onAction="#SureOnAction" prefHeight="64.0" prefWidth="104.0" text="确定">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <Button fx:id="Exit" layoutX="260.0" layoutY="429.0" mnemonicParsing="false" onAction="#ExitOnAction" prefHeight="64.0" prefWidth="104.0" text="取消">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <Label layoutX="107.0" layoutY="80.0" prefHeight="46.0" prefWidth="72.0" text="姓名:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="Name" layoutX="179.0" layoutY="88.0" prefHeight="30.0" prefWidth="171.0" promptText="请输入姓名:" />
