         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="211.0" layoutY="14.0" prefHeight="46.0" prefWidth="84.0" text="注册">
         <font>
            <Font size="37.0" />
         </font>
      </Label>
      <Label layoutX="107.0" layoutY="204.0" prefHeight="46.0" prefWidth="72.0" text="性别:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <RadioButton fx:id="male" layoutX="179.0" layoutY="212.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="72.0" text="男">
         <font>
            <Font size="20.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="SexGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="female" layoutX="278.0" layoutY="212.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="72.0" text="女" toggleGroup="$SexGroup">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <Label fx:id="success" layoutX="177.0" layoutY="340.0" prefHeight="46.0" prefWidth="135.0" text="注册成功!" textFill="#d70c0c" visible="false">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Label fx:id="isRegister" layoutX="92.0" layoutY="340.0" prefHeight="46.0" prefWidth="305.0" text="注册失败!该用户已经存在!" textFill="#d70c0c" visible="false">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <PasswordField fx:id="PassWord" layoutX="177.0" layoutY="152.0" prefHeight="30.0" prefWidth="171.0" promptText="请输入密码:" />
      <Label layoutX="107.0" layoutY="268.0" prefHeight="46.0" prefWidth="72.0" text="身份:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
