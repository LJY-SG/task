         <font>
            <Font size="20.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="StatusGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="Teacher" layoutX="278.0" layoutY="276.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="84.0" text="教师" toggleGroup="$StatusGroup">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
